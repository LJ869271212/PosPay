<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ydp40"
        android:gravity="center_vertical"
        android:background="@color/colore3e3e3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/ydp40"
            android:layout_height="@dimen/ydp40"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/xdp15"
            android:src="@mipmap/back"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ydp30"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/xdp10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ydp25"
                android:layout_height="@dimen/ydp25"
                android:src="@mipmap/search"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ydp30"
                android:layout_weight="1"
                android:hint="@string/waybillFour"
                android:background="@null"
                android:paddingLeft="@dimen/xdp5"
                />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="@dimen/ydp30"
            android:layout_height="@dimen/ydp30"
            android:background="?android:attr/selectableItemBackground"
            android:src="@mipmap/scan" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_check_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xdp5"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>