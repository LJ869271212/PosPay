<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/xdp5"
        android:layout_marginLeft="@dimen/xdp5"
        android:layout_marginRight="@dimen/xdp5"
        android:background="@drawable/white_shape"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ydp100"
        android:paddingTop="@dimen/ydp20">

        <LinearLayout
            android:id="@+id/ll_scan_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/xdp50"
                android:layout_height="@dimen/xdp50"
                android:src="@mipmap/scan_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ydp10"
                android:text="@string/scan_pay"
                android:textSize="@dimen/sp20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pay_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/xdp50"
                android:layout_height="@dimen/xdp50"
                android:src="@mipmap/pay_card" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ydp10"
                android:text="@string/pay_card"
                android:textSize="@dimen/sp20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/xdp50"
                android:layout_height="@dimen/xdp50"
                android:src="@mipmap/scan_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ydp10"
                android:text="@string/scan_pay"
                android:textSize="@dimen/sp20" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>